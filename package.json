{
  "name": "booklib",
  "private": true,
  "main": "dist-electron/main.js",
  "version": "0.1.0",
  "description": "BookLib is an application for managing your book collection.",
  "author": "Jessica Aissa <deadalley31@gmail.com>",
  "scripts": {
    "dev": "cross-env ELECTRON_ENABLED=false nuxt dev --open --dotenv .env.local",
    "dev:electron": "cross-env ELECTRON_ENABLED=true nuxt dev --dotenv .env.local",
    "build:electron": "cross-env ELECTRON_ENABLED=true nuxt generate",
    "build:web": "cross-env ELECTRON_ENABLED=false nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:js": "eslint .",
    "lint:ts": "nuxi typecheck",
    "lint:prettier": "prettier . --check",
    "lint": "pnpm lint:js && pnpm lint:ts && pnpm lint:prettier",
    "lint:fix": "prettier . --write --list-different && pnpm lint:js --fix",
    "test": "vitest",
    "test:start-app": "nuxt dev --port 3002 --dotenv .env.test",
    "test:e2e": "pnpm playwright test --project=chromium",
    "test:e2e:ui": "pnpm playwright test --ui",
    "test:e2e:codegen": "concurrently 'pnpm test:start-app' 'playwright codegen'",
    "test:e2e:report": "playwright show-report",
    "coverage": "vitest run --coverage",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "electron:dir": "electron-builder --dir",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:win:docker": "./scripts/build-windows.sh",
    "electron:build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@formkit/nuxt": "^1.6.9",
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/image": "^1.11.0",
    "@sentry/electron": "^6.11.0",
    "@sentry/nuxt": "^9",
    "@tabler/icons-vue": "^3.34.1",
    "@tanstack/vue-table": "^8.21.3",
    "@vueuse/core": "^13.9.0",
    "color": "^5.0.0",
    "dayjs": "^1.11.18",
    "echarts": "^5.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "import-in-the-middle": "^1.14.2",
    "lowdb": "^7.0.1",
    "nuxt": "^3.19.1",
    "nuxt-echarts": "0.4.0",
    "nuxt-file-storage": "^0.3.0",
    "papaparse": "5.5.3",
    "radix-vue": "^1.9.17",
    "ramda": "^0.31.3",
    "uuid": "^11.1.0",
    "vue": "^3.5.21",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@histoire/plugin-nuxt": "^0.17.17",
    "@histoire/plugin-vue": "^0.17.17",
    "@nuxt/eslint-config": "^1.9.0",
    "@nuxt/test-utils": "^3.19.2",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@playwright/test": "^1.55.0",
    "@types/color": "^4.2.0",
    "@types/node": "^24.3.1",
    "@types/papaparse": "^5.3.16",
    "@types/ramda": "^0.31.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.9",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.20",
    "eslint": "^9.35.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "happy-dom": "^18.0.1",
    "histoire": "^0.17.17",
    "nuxt-electron": "^0.7.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "playwright-core": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.2.4",
    "vue-tsc": "^3"
  },
  "resolutions": {
    "globals": "^15"
  },
  "packageManager": "pnpm@10.15.1",
  "pnpm": {
    "overrides": {
      "@vercel/nft": "^0.27.4"
    }
  }
}
