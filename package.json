{
  "name": "booklib",
  "private": true,
  "main": "dist-electron/main.js",
  "version": "0.1.0",
  "description": "BookLib is an application for managing your book collection.",
  "author": "Jessica Aissa <deadalley31@gmail.com>",
  "scripts": {
    "dev": "cross-env ELECTRON_ENABLED=false nuxt dev --open --dotenv .env.local",
    "dev:electron": "cross-env ELECTRON_ENABLED=true nuxt dev --dotenv .env.local",
    "build:electron": "cross-env ELECTRON_ENABLED=true nuxt generate",
    "build:web": "cross-env ELECTRON_ENABLED=false nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:js": "eslint .",
    "lint:ts": "nuxi typecheck",
    "lint:prettier": "prettier . --check",
    "lint": "pnpm lint:js && pnpm lint:ts && pnpm lint:prettier",
    "lint:fix": "prettier . --write --list-different && pnpm lint:js --fix",
    "test": "vitest",
    "test:start-app": "nuxt dev --port 3002 --dotenv .env.test",
    "test:e2e": "pnpm playwright test --project=chromium",
    "test:e2e:ui": "pnpm playwright test --ui",
    "test:e2e:codegen": "concurrently 'pnpm test:start-app' 'playwright codegen'",
    "test:e2e:report": "playwright show-report",
    "coverage": "vitest run --coverage",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "electron:dir": "electron-builder --dir",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:win:docker": "./scripts/build-windows.sh",
    "electron:build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@formkit/nuxt": "^1.6.9",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/image": "^2.0.0",
    "@sentry/electron": "^7.5.0",
    "@sentry/nuxt": "^10",
    "@tabler/icons-vue": "^3.36.0",
    "@tanstack/vue-table": "^8.21.3",
    "@vueuse/core": "^14.1.0",
    "color": "^5.0.3",
    "dayjs": "^1.11.19",
    "echarts": "^6.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "import-in-the-middle": "^2.0.0",
    "lowdb": "^7.0.1",
    "nuxt": "^4.2.2",
    "nuxt-echarts": "1.0.1",
    "nuxt-file-storage": "^0.3.0",
    "papaparse": "5.5.3",
    "radix-vue": "^1.9.17",
    "ramda": "^0.32.0",
    "uuid": "^13.0.0",
    "vue": "^3.5.25",
    "vue-echarts": "^8.0.1",
    "vue-router": "^4.6.4",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@histoire/plugin-nuxt": "^0.17.17",
    "@histoire/plugin-vue": "^0.17.17",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/test-utils": "^3.21.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@playwright/test": "^1.57.0",
    "@types/color": "^4.2.0",
    "@types/node": "^25.0.2",
    "@types/papaparse": "^5.5.2",
    "@types/ramda": "^0.31.1",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/eslint-plugin": "^1.5.2",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.3.6",
    "eslint": "^9.39.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "happy-dom": "^20.0.11",
    "histoire": "^0.17.17",
    "nuxt-electron": "^0.7.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "playwright-core": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.15",
    "vue-tsc": "^3"
  },
  "resolutions": {
    "globals": "^15"
  },
  "packageManager": "pnpm@10.26.0",
  "pnpm": {
    "overrides": {
      "@vercel/nft": "^0.27.4"
    }
  }
}
