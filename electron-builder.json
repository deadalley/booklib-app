{
  "appId": "com.booklib.app",
  "productName": "BookLib",
  "directories": {
    "output": "dist-packaged"
  },
  "asar": false,
  "files": [".output/**/*", "dist-electron"],
  "extraResources": [
    {
      "from": "public/",
      "to": "public/",
      "filter": ["**/*"]
    }
  ],
  "compression": "normal",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "BookLib"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/logo.icns",
    "category": "public.app-category.productivity"
  },
  "dmg": {
    "title": "BookLib",
    "icon": "public/logo.icns"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/logo.svg",
    "category": "Office",
    "maintainer": "Jessica Aissa <deadalley31@gmail.com>",
    "vendor": "Jessica Aissa",
    "description": "BookLib is an application for managing your book collection.",
    "synopsis": "Manage your personal book library",
    "desktop": {
      "entry": {
        "Name": "BookLib",
        "Comment": "Manage your personal book library",
        "Keywords": "books;library;reading;collection;",
        "StartupWMClass": "BookLib",
        "Categories": "Office;Education;",
        "StartupNotify": "true"
      }
    }
  },
  "deb": {
    "packageName": "booklib",
    "packageCategory": "utils",
    "priority": "optional",
    "description": "BookLib is an application for managing your book collection.",
    "synopsis": "Manage your personal book library",
    "maintainer": "Jessica Aissa <deadalley31@gmail.com>",
    "vendor": "Jessica Aissa",
    "icon": "public/icon.svg",
    "depends": [
      "libgtk-3-0",
      "libnotify4",
      "libnss3",
      "libxss1",
      "libxtst6",
      "xdg-utils",
      "libatspi2.0-0",
      "libdrm2",
      "libxcomposite1",
      "libxdamage1",
      "libxrandr2",
      "libgbm1",
      "libxkbcommon0",
      "libasound2"
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "deadalley",
    "repo": "booklib-app"
  }
}
